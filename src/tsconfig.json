{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "allowJs": true,
    "types": ["vite/client", "vitest/globals"],
    "outDir": ".build"
  },
  "include": ["resources/js/**/*"],
  "exclude": ["node_modules", "public", "resources/**/__tests__/*", ".build"]
}
